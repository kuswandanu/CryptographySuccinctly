<Window x:Class="CryptographySuccintly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cryptography Succintly" Height="240" Width="470">
    <Grid>
        <Button x:Name="btnRandom" Content="Random Cryptography" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btnClick" Padding="10,1"/>
        <Button x:Name="btnHashingMD5" Content="Hashing MD5" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>
        <Button x:Name="btnHashingSHA" Content="Hashing SHA" HorizontalAlignment="Left" Margin="111,37,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>
        <Button x:Name="btnHMAC" Content="Hashing Message Authentication Codes" HorizontalAlignment="Left" Margin="209,37,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>
        <Button x:Name="btnHashPasswordWithSalt" Content="Hash Password With Salt" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>
