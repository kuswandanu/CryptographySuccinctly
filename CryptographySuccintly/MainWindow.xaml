        <Button x:Name="btnAES" Content="AES" HorizontalAlignment="Left" Margin="144,91,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>
        <Button x:Name="btnDES" Content="DES" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>
        <Button x:Name="btnTripleDES" Content="Triple DES" HorizontalAlignment="Left" Margin="61,91,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>
        <Button x:Name="btnRSA" Content="RSA" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>
        <Button x:Name="btnHybrid" Content="Hybrid RSA + AES" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>
        <Button x:Name="btnHybridIntegrity" Content="Hybrid Encryption with Added Integrity" HorizontalAlignment="Left" Margin="134,145,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>
        <Button x:Name="btnDigitalSignature" Content="Digital Signature" HorizontalAlignment="Left" Margin="10,172,0,0" VerticalAlignment="Top" Padding="10,1" Click="btnClick"/>

    </Grid>
</Window>
