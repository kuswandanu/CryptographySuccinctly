<Window x:Class="Password_Key_Derivation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Key Derivation" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtPassword" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontFamily="Consolas"/>
        <Button x:Name="btnHash" Content="Hash Password" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="97" Click="btnHash_Click"/>
        <TextBox x:Name="txtResult" Margin="10,65,10,10" TextWrapping="Wrap" Text="result" IsReadOnly="True" AcceptsReturn="True" FontFamily="Consolas"/>

    </Grid>
</Window>
