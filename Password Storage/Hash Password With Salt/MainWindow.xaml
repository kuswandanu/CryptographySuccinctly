<Window x:Class="Hash_Password_With_Salt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hash Password With Salt" Height="187.314" Width="525">
    <Grid>
        <TextBox x:Name="txtPassword" Height="23" Margin="10,10,10,0" Text="Password" VerticalAlignment="Top" FontFamily="Consolas"/>
        <Button x:Name="btnHash" Content="Hash" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="btnHash_Click"/>
        <TextBox x:Name="txtHashed" Height="23" Margin="10,93,10,0" Text="Hashed" VerticalAlignment="Top" IsReadOnly="True" FontFamily="Consolas"/>
        <TextBox x:Name="txtSalt" Height="23" Margin="10,65,10,0" Text="Salt" VerticalAlignment="Top" IsReadOnly="True" FontFamily="Consolas"/>
        <TextBox x:Name="txtCheck" Height="23" Margin="10,121,90,0" TextWrapping="Wrap" Text="Check" VerticalAlignment="Top"/>
        <Button x:Name="btnCheck" Content="Check" Margin="0,121,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="btnCheck_Click"/>

    </Grid>
</Window>
