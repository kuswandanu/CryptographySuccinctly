<Window x:Class="Hashing_SHA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hashing SHA" Height="270" Width="525">
    <Grid>
        <TextBox x:Name="txtMessage" Margin="10,10,10,122" TextWrapping="Wrap" Text="TextBox"/>
        <Button x:Name="btnHash" Content="Hash SHA" HorizontalAlignment="Center" Margin="0,0,0,95" VerticalAlignment="Bottom" Width="75" Click="btnHash_Click"/>
        <TextBox x:Name="txtSHA1" Height="23" Margin="62,0,10,67" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtSHA256" Height="23" Margin="62,0,10,39" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtSHA512" Height="23" Margin="62,0,10,11" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,71" TextWrapping="Wrap" Text="SHA-1" VerticalAlignment="Bottom"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,43" TextWrapping="Wrap" Text="SHA-256" VerticalAlignment="Bottom"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,15" TextWrapping="Wrap" Text="SHA-512" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
