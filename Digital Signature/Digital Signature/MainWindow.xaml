<Window x:Class="Digital_Signature.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Digital Signature" Height="350" Width="700">
    <Grid>
        <TextBox x:Name="txtMessage" Height="23" Margin="10,10,10,0" Text="Message" VerticalAlignment="Top"/>
        <Button x:Name="btnHash" Content="Hash Message" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Padding="10,1" Click="Button_Click"/>
        <TextBox x:Name="txtHashed" Height="23" Margin="10,65,10,0" Text="Hashed" VerticalAlignment="Top"/>
        <Button x:Name="btnAssignKey" Content="Assign Key" HorizontalAlignment="Left" Margin="115,38,0,0" VerticalAlignment="Top" Padding="10,1" Click="Button_Click"/>
        <Button x:Name="btnSignData" Content="Sign Data" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Padding="10,1" Click="Button_Click"/>
        <TextBox x:Name="txtSignature" Height="70" Margin="10,120,10,0" Text="Signature" VerticalAlignment="Top" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btnVerify" Content="Verify Signature" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Padding="10,1" Click="Button_Click"/>
        <TextBox x:Name="txtVerified" Height="23" Margin="10,222,10,0" Text="Verified" VerticalAlignment="Top"/>

    </Grid>
</Window>
